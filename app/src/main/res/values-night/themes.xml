<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:dialogTheme">@style/fabStyleNight</item>

    </style>

    <style name="fabStyleNight" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="tint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/fab_background_night</item>
    </style>

    <style name="main_category_item1">
        <item name="android:background">@drawable/main_category_item_background_night</item>
    </style>

    <style name="main_category_item2">
        <item name="android:background">@drawable/main_category_item_background_night2</item>
    </style>
    
    <style name="last_read_poem_style">
        <item name="android:background">@drawable/gradient_night</item>
    </style>

    <style name="last_poem_body">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="fal_background">
        <item name="android:background">@drawable/back_of_cardview_teal</item>
    </style>

    <style name="fal_inner_background">
        <item name="android:background">@drawable/corner_radius_night</item>
    </style>

    <style name="subscriptionStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
</resources>