<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <data>
        <variable
            name="Sub"
            type="ir.rahnama.sherapp.model.Subscribtion" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:layout_margin="@dimen/_4sdp">



        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:background="@drawable/sub_coin_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="6dp">


            <LinearLayout
                android:id="@+id/buySub_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/subscription_gradiant"
                android:orientation="vertical"
                android:gravity="center|top">


                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/sub_imageView"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_70sdp"
                    />

                <TextView
                    android:id="@+id/subTitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Sub.title}"
                    android:textDirection="rtl"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <TextView
                    android:id="@+id/sub_lengh_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Sub.length}"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_6sdp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        >

                        <TextView
                            android:id="@+id/sub_detail_1_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Sub.detail_1}"
                            android:textColor="@color/black"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:gravity="right"/>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_circle"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        >

                        <TextView
                            android:id="@+id/sub_detail_2_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Sub.detail_2}"
                            android:textColor="@color/black"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:gravity="right"
                           />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_circle"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        >

                        <TextView
                            android:id="@+id/sub_detail_3_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Sub.detail_3}"
                            android:textColor="@color/black"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="16dp"
                            android:gravity="right"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_circle"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"

                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/price_shape_model"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_1sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sub_price_textView"
                        android:text="@{Sub.price}"
                        android:layout_gravity="center|top"
                        android:layout_margin="@dimen/_2sdp"
                        />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
