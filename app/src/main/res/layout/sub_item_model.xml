<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <data>
        <variable
            name="Sub"
            type="ir.rahnama.sherapp.model.Subscribtion" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp"
    android:layout_margin="-2dp"
    >



    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:background="@drawable/sub_coin_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">


        <LinearLayout
            android:id="@+id/buySub_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/subscription_gradiant"
            android:gravity="center|top"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sub_imageView"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_58sdp"
                android:imageLoader="@{Sub.image}" />

            <TextView
                android:id="@+id/subTitle_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@{Sub.title}"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sub_lengh_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{Sub.length}"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="@dimen/_4sdp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/sub_detail_1_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{Sub.detail_1}"
                        android:textColor="@color/black"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="16dp"
                        />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_circle" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sub_detail_2_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{Sub.detail_2}"
                        android:textColor="@color/black"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="16dp"
                        />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_circle" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sub_detail_3_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{Sub.detail_3}"
                        android:textColor="@color/black"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="16dp"
                       />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_circle" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/price_shape_model"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sub_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="@{Sub.price}" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>