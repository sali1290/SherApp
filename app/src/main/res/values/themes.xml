<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/fabStyleLight</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="HeaderTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="subscriptionStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fabStyleLight" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="tint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_style_light</item>
    </style>

    <style name="main_category_item1">
        <item name="android:background">@drawable/main_category_item_background</item>
    </style>

    <style name="main_category_item2">
        <item name="android:background">@drawable/main_category_item_background2</item>
    </style>

    <style name="last_read_poem_style">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="last_poem_body">
        <item name="android:background">#F3FFFFFF</item>
    </style>

    <style name="fal_background">
        <item name="android:background">@drawable/back_of_cardview_light_blue</item>
    </style>

    <style name="fal_inner_background">
        <item name="android:background">@drawable/corner_radius</item>
    </style>

    <style name="icon_color">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="filterBackground">
        <item name="backgroundTint">@color/light_gray_2x</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="subFabItemBackground">
        <item name="background">@drawable/fab_style_light</item>
    </style>

    <style name="logUpBackground">
        <item name="android:background">@color/white</item>
    </style>
</resources>